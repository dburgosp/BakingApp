<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipes_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recipes_list_no_result_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/recipes_list_loading_indicator"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="24sp"
                tools:text="Message to display when there are no search results" />

            <ProgressBar
                android:id="@+id/recipes_list_loading_indicator"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
